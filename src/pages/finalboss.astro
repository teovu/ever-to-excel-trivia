---
// Import the component. Note that we're NOT importing React here.
import QuizComponent from '../components/QuizComponent.jsx';

// Define your data here
const quizData = {
  uniqueID: "finalboss",
  question: "What is the name of the last witch to be legally executed in Scotland?",
  answers: [
    { text: "a) Agnes Sampson", isCorrect: false },
    { text: "b) Janet Horne", isCorrect: true },
    { text: "c) Lilias Adie", isCorrect: false },
    { text: "d) Isobel Gowdie", isCorrect: false },
  ],
  pointAmount: "Double or nothing",
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Page</title>
</head>
<body>
  <!-- Render your component and pass props directly -->
  <QuizComponent
  client:load
  uniqueID={quizData.uniqueID}
  question={quizData.question}
  answers={quizData.answers}
  pointAmount={quizData.pointAmount}
/>
</body>
</html>
