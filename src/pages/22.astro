---
import QuizComponent from '../components/QuizComponent.jsx';

// Define your data here
const quizData = {
  uniqueID: "22",
  question: "What year was Dame Sally Mapstone born?",
  answers: [
    { text: "a) 1957", isCorrect: true },
    { text: "b) 1413", isCorrect: false },
    { text: "c) 1945", isCorrect: false },
    { text: "d) 1967", isCorrect: false },
  ],
  pointAmount: 200,
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Page</title>
</head>
<body>
  <!-- Render your component and pass props directly -->
  <QuizComponent
  client:load
  uniqueID={quizData.uniqueID}
  question={quizData.question}
  answers={quizData.answers}
  pointAmount={quizData.pointAmount}
/>
</body>
</html>
