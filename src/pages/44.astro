---
// Import the component. Note that we're NOT importing React here.
import QuizComponent from '../components/QuizComponent.jsx';

// Define your data here
const quizData = {
  uniqueID: "44",
  question: "What does the word \"Peruse\" mean?",
  answers: [
    { text: "a) To use single-use plastic products", isCorrect: false },
    { text: "b) To explore uncharted territory", isCorrect: false },
    { text: "c) To sail down a river", isCorrect: false },
    { text: "d) To read something carefully", isCorrect: true },
  ],
  pointAmount: 300,
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Page</title>
</head>
<body>
  <!-- Render your component and pass props directly -->
  <QuizComponent
  client:load
  uniqueID={quizData.uniqueID}
  question={quizData.question}
  answers={quizData.answers}
  pointAmount={quizData.pointAmount}
/>
</body>
</html>
