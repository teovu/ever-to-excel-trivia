---
// Import the component. Note that we're NOT importing React here.
import QuizComponent from '../components/QuizComponent.jsx';

// Define your data here
const quizData = {
  uniqueID: "52",
  question: "What is the Scottish flag also known as?",
  answers: [
    { text: "a) The SATIRE", isCorrect: false },
    { text: "b) The UNION JACK", isCorrect: false },
    { text: "c) The FLAPJACK", isCorrect: false },
    { text: "d) The SALTIRE", isCorrect: true },
  ],
  pointAmount: 300,
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Page</title>
</head>
<body>
  <!-- Render your component and pass props directly -->
  <QuizComponent
  client:load
  uniqueID={quizData.uniqueID}
  question={quizData.question}
  answers={quizData.answers}
  pointAmount={quizData.pointAmount}
/>
</body>
</html>
