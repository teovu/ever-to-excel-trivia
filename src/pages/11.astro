---
import QuizComponent from '../components/QuizComponent.jsx';

// Define your data here
const quizData = {
  uniqueID: "11",
  question: "Other than whiskey, what is Scotland's national drink?",
  answers: [
    { text: "a) Buckfast", isCorrect: false },
    { text: "b) Tap water", isCorrect: false },
    { text: "c) Irn-Bru", isCorrect: true },
    { text: "d) Milk", isCorrect: false },
  ],
  pointAmount: 100,
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Page</title>
</head>
<body>
  <!-- Render your component and pass props directly -->
  <QuizComponent
  client:load
  uniqueID={quizData.uniqueID}
  question={quizData.question}
  answers={quizData.answers}
  pointAmount={quizData.pointAmount}
/>
</body>
</html>
